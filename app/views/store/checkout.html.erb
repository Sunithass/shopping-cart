
<!DOCTYPE html>
<html>
<style>
body
{
background-color:#322B61
} 
fieldset {
background: #efe;
}
 legend {
color: #dfd ;
background: #141 ;
font-family: sans-serif;
padding: 0.2em 1em;
}
 label {
width: 5em;
float: left;
text-align: right;
padding-top: 0.2em;
margin-right: 0.1em;
display: block;
}
 select,  textarea,  input {
margin-left: 0.5em;
}
submit {
margin-left: 4em;
}
 div {
margin: 0.5em 0;
}
</style>
<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<body>
<fieldset>
<legend>Please Enter Your Details</legend>
<div>
<%= f.label :name, "Name:" %>
<%= f.text_field :name, :size => 40 %>
</div>

<div>
<%= f.label :address, "Shipping Address:" %>
<%= f.text_area :address, :rows => 3, :cols => 30 %>
</div>

<div>
<%= f.label :email, "E-mail:" %>
<%= f.text_field :email, :size => 40 %>
</div>

<div>
<%= f.label :pay_type, "Pay with:" %>
<%= f.select :pay_type,
                 Order::PAYMENT_TYPES,
                 :prompt => "Select a payment method" %>
</div>

<%= button_to "Place Order", {:action => '_bill'}, :method => 'post', :remote => true %>
</fieldset>
<% end %>
</div>
</body>
</html>